<AnchorPane prefHeight="518.0" prefWidth="540.0" stylesheets="@../style/signUpStyle.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ImageView fx:id="userPhoto" fitHeight="120.0" fitWidth="127.0" layoutX="54.0" layoutY="20.0" onMouseClicked="#changeUserPicture" pickOnBounds="true" preserveRatio="true">
