            <InnerShadow color="#0e1114" />
         </effect>
         <cursor>
            <Cursor fx:constant="DEFAULT" />
         </cursor>
      </ImageView>
      <TextArea fx:id="descriptionField" layoutX="201.0" layoutY="20.0" prefHeight="120.0" prefWidth="219.0" promptText="Description..." style="-fx-border-color: #1e90ff;" />
      <Button fx:id="registerButton" layoutX="248.0" layoutY="435.0" mnemonicParsing="false" onAction="#register" prefHeight="25.0" prefWidth="82.0" style="-fx-border-color: #1e90ff;" text="Register" textFill="DODGERBLUE">
         <font>
            <Font name="System Bold" size="14.0" />
         </font></Button>
      <Button fx:id="signupCancelButton" layoutX="342.0" layoutY="435.0" mnemonicParsing="false" onAction="#cancelSignUp" prefHeight="25.0" prefWidth="82.0" style="-fx-border-color: #1e90ff;" text="Cancel" textFill="DODGERBLUE">
