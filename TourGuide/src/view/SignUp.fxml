            <Label prefHeight="17.0" prefWidth="60.0" text="Username:" textFill="DODGERBLUE" />
            <Label prefHeight="17.0" prefWidth="82.0" text="Password:" textFill="DODGERBLUE" />
            <Label prefHeight="17.0" prefWidth="82.0" text="Status" textFill="DODGERBLUE" />
         </children>
      </VBox>
      <VBox layoutX="206.0" layoutY="201.0" prefHeight="212.0" prefWidth="219.0">
         <children>
            <TextField fx:id="firstNameText" focusTraversable="false" prefHeight="25.0" prefWidth="219.0" style="-fx-border-color: #1e90ff;">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </TextField>
            <TextField fx:id="lastNameText" focusTraversable="false" prefHeight="25.0" prefWidth="219.0" style="-fx-border-color: #1e90ff;">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="umcnText" focusTraversable="false" prefHeight="25.0" prefWidth="219.0" style="-fx-border-color: #1e90ff;">
