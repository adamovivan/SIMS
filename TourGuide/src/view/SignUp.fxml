                  <Insets top="10.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="addressText" focusTraversable="false" prefHeight="25.0" prefWidth="219.0" style="-fx-border-color: #1e90ff;">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </TextField>
